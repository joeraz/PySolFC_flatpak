{
  "app-id": "io.sourceforge.pysolfc.PySolFC",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "pysol.py",
  "cleanup": [
    "/bin/sqlite3_analyzer",
    "/bin/tclsh8.6",
    "/bin/wish8.6",
    "/include",
    "*.a",
    "*.la",
    "/lib/*Config.sh",
    "/lib/pkgconfig",
    "/man",
    "/share/aclocal",
    "/share/info",
    "/share/man"
  ],
  "rename-icon": "pysol",
  "rename-desktop-file": "pysol.desktop",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--device=dri",
    "--persist=.PySolFC"
  ],
  "build-options": {
      "env": {
          "PORTMIDI_INC_PORTTIME": "1",
          "PYGAME_EXTRA_BASE": "/app"
      }
  },
  "modules": [
    "tkinter.json",
    {
        "name": "portmidi",
        "buildsystem": "cmake",
        "sources": [
            {
              "type": "git",
              "url": "https://github.com/PortMidi/portmidi",
              "commit": "6a97d1eb3af062f3b2f2fabc196a5f66efb7a6c5",
              "tag": "v2.0.3",
              "x-checker-data": {
                "type": "git",
                "tag-pattern": "^v([\\d.]+)$"
              }
            }
        ]
    },
    "python3-modules.json",
    {
      "name": "PySolFC-Cardsets",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/PySolFC/cardsets/",
        "cp -r * /app/share/PySolFC/cardsets/"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/shlomif/PySolFC-Cardsets",
          "commit": "db74d748556b167052da9d6bcd7cc6b461351ff8",
          "tag": "2.1",
          "x-checker-data": {
            "type": "git",
            "tag-pattern": "^([\\d.]+)$"
          }
        }
      ]
    },
    {
      "name": "PySol-Music",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm644 data/music/* -t /app/share/PySolFC/music/"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/shlomif/pysol-music",
          "commit": "108d6dcbb931f2b709f5a1590ea7ea6190f98d9e",
          "tag": "4.50",
          "x-checker-data": {
              "type": "git",
              "tag-pattern": "^([\\d.]+)$"
          }
        }
      ]
    },
    {
      "name": "PySolFC",
      "buildsystem": "simple",
      "build-commands": [
        "make rules",
        "make mo",
        "ln -s data/images images",
        "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} . --no-build-isolation",
        "install -Dm644 io.sourceforge.pysolfc.PySolFC.appdata.xml -t /app/share/metainfo/"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/shlomif/PySolFC",
          "commit": "72ee1c6aafe227f01ad2f91222cccda77efbc35d",
          "tag": "pysolfc-2.16.0",
          "x-checker-data": {
              "type": "git",
              "tag-pattern": "^pysolfc-([\\d.]+)$",
              "is-main-source": true
          }
        },
        {
          "type": "patch",
          "path": "0001-allow-app-paths.patch"
        },
        {
          "type": "file",
          "path": "io.sourceforge.pysolfc.PySolFC.appdata.xml"
        }
      ]
    }
  ]
}
